[Unit]
Description=Bepusdt Service
Documentation=https://github.com/v03413/bepusdt
After=network.target nss-lookup.target

[Service]
Type = simple
LimitAS=infinity
LimitRSS=infinity
LimitCORE=infinity
LimitNOFILE=999999
WorkingDirectory=/var/lib/bepusdt
ExecStart=/usr/local/bin/bepusdt start
Restart=on-failure

[Install]
WantedBy=multi-user.target
